<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="1">
    <!-- Daily cron: notify expiring compliance documents -->
    <record id="ir_cron_odhr_compliance_expiry" model="ir.cron">
      <field name="name">ODHR: Compliance Expiry Notifier</field>
      <field name="model_id" ref="model_odhr_compliance_document"/>
      <field name="state">code</field>
      <field name="code">model.cron_notify_expiring_documents()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="numbercall">-1</field>
      <field name="active">True</field>
    </record>

    <!-- Daily cron: probation end notifications -->
    <record id="ir_cron_odhr_probation_end" model="ir.cron">
      <field name="name">ODHR: Probation End Notifier</field>
      <field name="model_id" ref="hr.model_hr_employee"/>
      <field name="state">code</field>
      <field name="code">model.cron_notify_probation_end()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="numbercall">-1</field>
      <field name="active">True</field>
    </record>
  </data>
</odoo>
