<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_odhr_compliance_document_tree" model="ir.ui.view">
      <field name="name">odhr.compliance.document.tree</field>
      <field name="model">odhr.compliance.document</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="employee_id"/>
          <field name="document_type"/>
          <field name="issue_date"/>
          <field name="expiry_date"/>
          <field name="is_expired"/>
        </tree>
      </field>
    </record>

    <record id="view_odhr_compliance_document_form" model="ir.ui.view">
      <field name="name">odhr.compliance.document.form</field>
      <field name="model">odhr.compliance.document</field>
      <field name="arch" type="xml">
        <form string="Compliance Document">
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="document_type"/>
                <field name="notes"/>
              </group>
              <group>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="is_expired" readonly="1"/>
                <field name="attachment_id"/>
              </group>
            </group>
          </sheet>
          <chatter>
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </chatter>
        </form>
      </field>
    </record>

    <record id="action_odhr_compliance_document" model="ir.actions.act_window">
      <field name="name">Compliance Documents</field>
      <field name="res_model">odhr.compliance.document</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p>Create and manage employee compliance documents and expiries.</p>
      </field>
    </record>
  </data>
</odoo>
